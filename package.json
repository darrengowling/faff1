{
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "main": "playwright.config.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:contract": "cd frontend && npm run test:contract",
    "lint:links": "node scripts/lint-links.js",
    "test:e2e": "npm run lint:links && cd frontend && npm run test:contract && cd .. && bash ./scripts/test-env.sh && playwright test",
    "test:core": "source ./scripts/test-env.sh && playwright test tests/e2e/core.smoke.spec.ts",
    "test:e2e:headed": "source ./scripts/test-env.sh && playwright test --headed",
    "test:navigation": "source ./scripts/test-env.sh && playwright test tests/e2e/navigation.spec.ts",
    "test:auction": "source ./scripts/test-env.sh && playwright test tests/e2e/auction.spec.ts",
    "test:roster": "source ./scripts/test-env.sh && playwright test tests/e2e/roster_and_budget.spec.ts",
    "test:scoring": "source ./scripts/test-env.sh && playwright test tests/e2e/scoring_ingest.spec.ts",
    "test:access": "source ./scripts/test-env.sh && playwright test tests/e2e/access_and_gates.spec.ts",
    "test:a11y": "playwright test tests/accessibility/a11y-audit.spec.js --reporter=list",
    "test:usability": "playwright test tests/usability/persona-usability.spec.js --reporter=list",
    "test:a11y:headed": "playwright test tests/accessibility/a11y-audit.spec.js --headed",
    "test:usability:headed": "playwright test tests/usability/persona-usability.spec.js --headed",
    "test:core-smoke": "playwright test tests/e2e/core-smoke.spec.ts --reporter=list"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "axios": "^1.12.2",
    "glob": "^11.0.3",
    "jest-axe": "^10.0.0",
    "mongodb": "^6.20.0",
    "socket.io-client": "^4.8.1",
    "typescript": "^5.9.2"
  }
}
